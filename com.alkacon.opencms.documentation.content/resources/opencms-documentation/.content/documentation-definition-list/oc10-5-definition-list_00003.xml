<?xml version="1.0" encoding="UTF-8"?>

<DocumentationDefinitionLists xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="opencms://system/modules/com.alkacon.opencms.documentation/schemas/documentation-definition-list.xsd">
  <DocumentationDefinitionList language="en">
    <Title><![CDATA[Shortcuts - Page editor]]></Title>
    <PropertyDef>true</PropertyDef>
    <Entry>
      <Term><![CDATA[CTRL + e]]></Term>
      <Description name="Description0">
        <links/>
        <content><![CDATA[<p>Switch to the next element view</p>]]></content>
      </Description>
    </Entry>
    <Entry>
      <Term><![CDATA[CTRL + SHIFT + e]]></Term>
      <Description name="Description0">
        <links/>
        <content><![CDATA[<p>Iterate through the edit levels (show edit points only for contents in containers with a certain nesting level) - helpful to deal with overlapping edit points</p>]]></content>
      </Description>
    </Entry>
    <Entry>
      <Term><![CDATA[ESCAPE]]></Term>
      <Description name="Description0">
        <links/>
        <content><![CDATA[<p>Cancel a drag &amp; drop operation</p>]]></content>
      </Description>
    </Entry>
    <Entry>
      <Term><![CDATA[CTRL]]></Term>
      <Description name="Description0">
        <links/>
        <content><![CDATA[<p>Pressed, when dropping an existing element into the page the "Copy or Reuse" dialog is shown</p>]]></content>
      </Description>
    </Entry>
  </DocumentationDefinitionList>
</DocumentationDefinitionLists>
