<DocumentationDefinitionLists xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="opencms://system/modules/com.alkacon.opencms.documentation/schemas/documentation-definition-list.xsd">
  <DocumentationDefinitionList language="en">
    <Title><![CDATA[Page Editor's Toolbar Options]]></Title>
    <Heading><![CDATA[Available Options]]></Heading>
    <PropertyDef>false</PropertyDef>
    <Entry>
      <Term><![CDATA[Publish]]></Term>
      <Description name="Description0">
        <links/>
        <content><![CDATA[<p>Opens the publish dialog.</p>]]></content>
      </Description>
    </Entry>
    <Entry>
      <Term><![CDATA[Clipboard]]></Term>
      <Description name="Description0">
        <links/>
        <content><![CDATA[<p>Opens the clipboard, where favorites and recent changes can be accessed.</p>]]></content>
      </Description>
    </Entry>
    <Entry>
      <Term><![CDATA[Add content]]></Term>
      <Description name="Description0">
        <links/>
        <content><![CDATA[<p>The "Add content" allows adding content to a page by drag &amp; drop.</p>]]></content>
      </Description>
    </Entry>
    <Entry>
      <Term><![CDATA[Galleries]]></Term>
      <Description name="Description0">
        <links/>
        <content><![CDATA[<p>Allows access to galleries, e.g., to upload pictures.</p>]]></content>
      </Description>
    </Entry>
    <Entry>
      <Term><![CDATA[Page Info]]></Term>
      <Description name="Description0">
        <links/>
        <content><![CDATA[<p>Allows to display information about the current page and its elements.</p>]]></content>
      </Description>
    </Entry>
    <Entry>
      <Term><![CDATA[Edit point]]></Term>
      <Description name="Description0">
        <links/>
        <content><![CDATA[<p>Clicking "Edit point" marks editable elements on the page with grey points.</p>]]></content>
      </Description>
    </Entry>
    <Entry>
      <Term><![CDATA[Context Menu]]></Term>
      <Description name="Description0">
        <links/>
        <content><![CDATA[<p>Shows the Context menu for the current page.</p>]]></content>
      </Description>
    </Entry>
    <Entry>
      <Term><![CDATA[Sitemap Editor]]></Term>
      <Description name="Description0">
        <links/>
        <content><![CDATA[<p>Switches to the sitemap editor.</p>]]></content>
      </Description>
    </Entry>
