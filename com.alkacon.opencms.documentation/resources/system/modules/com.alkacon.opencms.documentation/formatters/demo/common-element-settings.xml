<?xml version="1.0" encoding="UTF-8"?>

<SettingsConfigs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="opencms://system/modules/org.opencms.ade.config/schemas/formatters/settings_config.xsd">
  <SettingsConfig language="en">
    <Setting>
      <PropertyName><![CDATA[hideTitle]]></PropertyName>
      <DisplayName><![CDATA[Hide Title]]></DisplayName>
      <Description><![CDATA[When box is checked, the title will be hidden]]></Description>
      <Widget><![CDATA[checkbox]]></Widget>
      <Default><![CDATA[false]]></Default>
    </Setting>
    <Setting>
      <PropertyName><![CDATA[textLength]]></PropertyName>
      <DisplayName><![CDATA[Text length]]></DisplayName>
      <Description><![CDATA[Sets the maximum length of the text]]></Description>
      <Widget><![CDATA[string]]></Widget>
      <Default><![CDATA[200]]></Default>
    </Setting>
    <Setting>
      <PropertyName><![CDATA[borderColour]]></PropertyName>
      <DisplayName><![CDATA[Border Colour]]></DisplayName>
      <Description><![CDATA[changes the colour of the border]]></Description>
      <Widget><![CDATA[selectcombo]]></Widget>
      <WidgetConfig><![CDATA[black:Black|         red:Red|         blue:Blue|         green:Green]]></WidgetConfig>
    </Setting>
    <Setting>
      <PropertyName><![CDATA[dateFormat]]></PropertyName>
      <DisplayName><![CDATA[Date format]]></DisplayName>
      <Description><![CDATA[Sets how to display the date]]></Description>
      <Widget><![CDATA[selectcombo]]></Widget>
      <Default><![CDATA[DATE]]></Default>
      <WidgetConfig><![CDATA[none: show neither date nor time|           DATE:show date only|        TIME:show time only|        BOTH:show date and time     ]]></WidgetConfig>
    </Setting>
    <Setting>
      <PropertyName><![CDATA[dateFormat.modified]]></PropertyName>
      <DisplayName><![CDATA[Date Format]]></DisplayName>
      <Description><![CDATA[Sets how to display the date]]></Description>
      <Visibility><![CDATA[both]]></Visibility>
      <Widget><![CDATA[selectcombo]]></Widget>
      <Default><![CDATA[BOTH]]></Default>
      <WidgetConfig><![CDATA[none: show neither date nor time|        BOTH:show date and time     ]]></WidgetConfig>
    </Setting>
  </SettingsConfig>
</SettingsConfigs>
